<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启基础定位"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>
        <com.github.iielse.switchbutton.SwitchView
            android:id="@+id/register_location"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启GNSS数据接收"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>
        <com.github.iielse.switchbutton.SwitchView
            android:id="@+id/register_measurements"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启差分定位"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_centerVertical="true"/>
    <com.github.iielse.switchbutton.SwitchView
        android:id="@+id/register_diff_location"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentRight="true" />
</RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启轨迹模式"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"/>
        <com.github.iielse.switchbutton.SwitchView
            android:id="@+id/can_clear_map"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/can_clear_map"
        android:id="@+id/share_pos">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享位置"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/forward"
            android:background="#00000000"
            android:layout_marginEnd="40dp"
            />
    </RelativeLayout>

